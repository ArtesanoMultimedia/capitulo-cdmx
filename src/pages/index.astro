---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Capítulo CDMX">
  <main class="min-h-screen flex items-center justify-center bg-black">
    <div class="text-center space-y-8 px-4" transition:animate="fade">
      <h1 class="text-2xl md:text-3xl font-light tracking-wider text-gray-400 mb-12">
        CAPÍTULO CDMX
      </h1>
      
      <div class="max-w-md mx-auto">
        <form id="secretForm" class="space-y-6">
          <div>
            <input
              type="text"
              id="secretCode"
              placeholder="código secreto"
              class="w-full bg-transparent border-b border-gray-700 text-white text-center text-xl py-3 px-4 focus:outline-none focus:border-white transition-colors duration-300 placeholder-gray-600"
              autocomplete="off"
            />
          </div>
          
          <p id="errorMessage" class="text-red-500 text-sm opacity-0 transition-opacity duration-300">
            Código incorrecto
          </p>
          
          <button
            type="submit"
            class="mt-8 px-8 py-3 border border-gray-700 text-gray-400 hover:text-white hover:border-white transition-all duration-300 tracking-wider text-sm"
          >
            ENTRAR
          </button>
        </form>
      </div>

      <p class="text-gray-600 text-sm mt-12">
        Ingresa el código para continuar
      </p>
    </div>
  </main>
</Layout>

<script>
  const form = document.getElementById('secretForm') as HTMLFormElement;
  const input = document.getElementById('secretCode') as HTMLInputElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLParagraphElement;
  
  // Secret code - you can change this
  const SECRET_CODE = 'incendio';
  
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    
    const code = input.value.trim().toLowerCase();
    
    if (code === SECRET_CODE) {
      // Navigate to /historia with transition
      window.location.href = '/historia';
    } else {
      // Show error
      errorMessage.classList.remove('opacity-0');
      input.classList.add('border-red-500');
      
      setTimeout(() => {
        errorMessage.classList.add('opacity-0');
        input.classList.remove('border-red-500');
      }, 2000);
    }
  });
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  main > div {
    animation: fadeIn 1s ease-out;
  }
</style>
